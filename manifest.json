{
  "manifest_version": 3,
  "name": "Archive This!",
  "version": "1.0",
  "description": "Quickly archive the current tab using archive.is.",
  "author": "Alex Hoang",
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_title": "Archive This!",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}